<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center"
    android:background="@color/moj_morski">
<!--dp - piksele niezalezne-->
    <TextView
        android:id="@+id/pytanieTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pytanie"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="32dp"
        android:textSize="@dimen/Rozmiar_czcionki"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:layout_margin="@dimen/button_margin"
            android:onClick="dobraOdpowiedz"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/moj_rozowy"
            android:layout_margin="@dimen/button_margin"
            android:onClick="dobraOdpowiedz" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:onClick="zlaOdpowiedz"
            android:backgroundTint="@color/moj_bialy"
            android:layout_margin="@dimen/button_margin"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/moj_zielony"
            android:layout_margin="@dimen/button_margin"
            android:onClick="dobraOdpowiedz"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="@color/moj_zolty"
            android:layout_margin="@dimen/button_margin"
            android:onClick="dobraOdpowiedz"/>

<!--onclick to wiocha fest nie uzywac-->
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/moj_czerwony"
            android:layout_margin="@dimen/button_margin"
            android:onClick="zlaOdpowiedz"
        />
        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/moj_fioletowy"
            android:layout_margin="@dimen/button_margin"
            android:onClick="dobraOdpowiedz"/>
    </LinearLayout>


</LinearLayout>